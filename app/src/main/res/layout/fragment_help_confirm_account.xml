<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.juntcompany.godandgodsummer.Login.Help.HelpConfirmAccountActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/userInputData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sendMSG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userInputData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="15sp" />

    <TextView
        android:id="@+id/inputSendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendMSG"
        android:layout_centerHorizontal="true"
        android:text="전송된 코드를 여기에 입력하세요."
        android:textSize="15sp" />

    <EditText
        android:id="@+id/inputCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputSendCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="코드 입력" />

    <Button
        android:id="@+id/next"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="다음"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/receiveCode1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        android:text="코드 다시 받기" />

    <Button
        android:id="@+id/receiveCode2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiveCode1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        android:text="" />


</RelativeLayout>